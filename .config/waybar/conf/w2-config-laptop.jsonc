  "hyprland/workspaces": {  
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "disable-scroll": true,
    "only-active": false,
    "all-outputs": true,
    "on-click": "activate",
    "format": "{icon}",
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": [],
      },
    "format-icons": {
          "1": "<span font='9'></span>",
          "2": "<span font='9'></span>",
          "3": "<span font='9'></span>",
          "4": "<span font='9'></span>",
          "5": "<span font='9'></span>",
          "6": "<span font='9'></span>",
          "7": "<span font='9'></span>",
          "8": "<span font='9'></span>",
          "9": "<span font='9'></span>",
     "urgent": "<span font='9'></span>",
     "focused":"<span font='9'></span>",
      "default":"<span font='9'></span>"     
      
  },
  "sort-by-number": true,  
  
