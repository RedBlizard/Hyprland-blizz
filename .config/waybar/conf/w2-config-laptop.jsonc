//------Layout ------------------------------  
{
   "layer": "top",
    "position": "top",
    //"mode": "dock",
    "exclusive": "true",
    "passthrough": "false",
    "height": "20",
    "gtk-layer-shell": true,

    
  //--- Modules ------------------------------
       "modules-left": ["custom/launcher", "custom/themeswitcher", "custom/settings", "hyprland/workspaces", "cpu", "custom/cputemp", "custom/memory", "custom/hypridle", "custom/updates",],
       "modules-center": ["clock",],
       "modules-right": ["tray", "network", "custom/traffic", "custom/language", "custom/cycle_wall", "pulseaudio", "pulseaudio#microphone", "battery", "backlight", "custom/power",],       
       
   "hyprland/window": {  // Module has to be here in the config otherwise it will not work correctly
        "max-length": 100,
        "rewrite": {
            "(.*) - Brave": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) - youtube.com": "$1",
            "(.*) - Dolphin": "$1 ",
            "(.*) - Microsoft Teams": "$1",           
        },
        "separate-outputs": true 
       
    },        
    "clock": {
        "format": "  {:%R    %a,%d %b}",
        "format-alt": "  {:%H:%M} ",        
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "on-click-right": "mode",
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#A6D189'><b>W{}</b></span>",
                              "weekdays":   "<span color='#E5C890'><b>{}</b></span>",
                              "today":      "<span color='#E78284'><b><u>{}</u></b></span>"
                              }
                    },
        "actions":  {
                    "on-click-right": "mode",
                    "on-click-forward": "tz_up",
                    "on-click-backward": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
                    }
                               
  },
  "custom/launcher": {       
       "format": "<span font='10'></span>",  
       "on-click": "$HOME/.config/hypr/scripts/menu && pkill -RTMIN+8 waybar",      
       //"on-click": "$HOME/.config/hypr/scripts/rofi-menu",
       "tooltip-format": "",      
       "tooltip": false,
       "signal": 8
    
  },
  // Brave Launcher
  "custom/brave": {
       "format": "",
       "on-click": "brave",
       "tooltip": false
  
  },
  "custom/themeswitcher": {
       "format": "<span font='9'></span>",
       "on-click": "$HOME/.config/waybar/scripts/yad_switch-waybar-config.sh",
       "tooltip-format": "",       
       "tooltip": false,
       "signal": 8
       
  },
  "custom/settings": {
       "format": "",
       "on-click": "$HOME/.config/hypr/scripts/yad_settings.sh",          
       "tooltip-format": "",
       "signal": 8,
       "tooltip": false           
    
  },
  // Outlook Launcher
  "custom/outlook": {
       "format": "",
       "on-click": "brave --app=https://outlook.com",
       "tooltip": false
       
  },
  // Teams Launcher
  "custom/teams": {
       "format": "",
       "on-click": "brave --app=https://teams.microsoft.com/go",
       "tooltip": false
       
  },
  // ChatGPT Launcher
  "custom/chatgpt": {
       "format": "",
       "on-click": "brave --app=https://chat.openai.com",
       "tooltip": false
       
  },
  // Galculator
  "custom/calculator": {
       "format": "<span font='9'></span>",       
       "on-click": "galculator",
       "tooltip": false
       
  },
  // Looking Glass Launcher
  "custom/lookingglass": {
       "format": "",
       "on-click": "~/dotfiles/scripts/looking-glass.sh",
       "tooltip": false
  
